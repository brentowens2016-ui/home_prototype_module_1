[
  {
    "label": "Night Mode",
    "description": "Turn off all lights and arm security at 11pm.",
    "events": [
      {"event_type": "device_control", "device": "all_lights", "action": "off"},
      {"event_type": "system_mode_change", "mode": "Night"},
      {"event_type": "device_control", "device": "security_system", "action": "arm_home"}
    [
      {
        "id": "night_light",
        "trigger": "motion",
        "action": "turn_on",
        "device": "Hallway Bulb",
        "schedule": {
          "type": "cron",
          "cron": "0 22 * * *"  // every day at 10pm
        },
        "condition": {
          "type": "state",
          "device": "Hallway Bulb",
          "state": "off"
        }
      },
      {
        "id": "morning_routine",
        "trigger": "time",
        "action": "turn_on",
        "device": "Kitchen Bulb",
        "schedule": {
          "type": "cron",
          "cron": "0 7 * * *"  // every day at 7am
        },
        "condition": {
          "type": "state",
          "device": "Kitchen Bulb",
          "state": "off"
        }
      }
    ]
    "events": [
      {"event_type": "system_mode_change", "mode": "Vacation"},
      {"event_type": "device_control", "device": "all_lights", "action": "random_on_off"},
      {"event_type": "device_control", "device": "security_system", "action": "arm_away"}
    ],
    "triggers": [
      {"type": "manual"}
    ]
  }
]