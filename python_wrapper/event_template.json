
# Event/Scenario Input Template for Predictive AI Module (with Context)
#
# Fill in the fields below for each event or scenario you want to teach the AI.
# Save as a .json file or copy into the scenario input script when prompted.

{
  "event_type": "sensor_trigger",        # e.g., "sensor_trigger", "user_action", "system_mode_change", "system_heartbeat"
  "label": "Open_Front_Door",            # Human-readable label for the event/scenario
  "sensor_type": "contact",              # e.g., "contact", "motion", "pressure", "switch"
  "sensor_id": "front_door_contact",     # Unique ID or name for the sensor
  "location": "Front Door",              # Physical or logical location
  "value": "open",                       # State or value (e.g., "open", "closed", "on", "off", "broken")
  "timestamp": 1769600000,                # Unix timestamp (optional, can be auto-filled)
  "mode": "Night",                      # System mode (e.g., "Day", "Night", "Away", "Sleep", "Alert")
  "occupant_status": "in_bed",           # e.g., "awake", "moving", "sitting", "in_bed", "away"
  "alarm_state": "Armed Home",           # e.g., "Disarmed", "Armed Home", "Armed Away"
  "time_of_day": "02:15",                # Optional, for human readability (HH:MM)
  "recent_events": [                      # Optional, list of recent events for context
    {"event_type": "sensor_trigger", "sensor_id": "hallway_motion", "value": "active"},
    {"event_type": "sensor_trigger", "sensor_id": "front_door_contact", "value": "closed"}
  ]
}

# Example for a user action:
{
  "event_type": "user_action",
  "label": "User_Unlocks_Door",
  "action": "unlock",
  "target": "Front Door",
  "user_id": "user123",
  "timestamp": 1769600001,
  "mode": "Day",
  "occupant_status": "awake",
  "alarm_state": "Disarmed"
}

# Example for a system mode change:
{
  "event_type": "system_mode_change",
  "label": "Set_Mode_Away",
  "mode": "Away",
  "trigger": "user",
  "timestamp": 1769600002,
  "occupant_status": "away",
  "alarm_state": "Armed Away"
}

# Example for a system heartbeat (global context):
{
  "event_type": "system_heartbeat",
  "timestamp": 1769600003,
  "mode": "Night",
  "occupant_status": "in_bed",
  "alarm_state": "Armed Home",
  "active_devices": ["front_door_contact", "hallway_motion", "bedroom_pressure"],
  "recent_events": [
    {"event_type": "sensor_trigger", "sensor_id": "hallway_motion", "value": "active"},
    {"event_type": "sensor_trigger", "sensor_id": "front_door_contact", "value": "closed"}
  ],
  "mapping_snapshot": [ /* device mapping data here */ ]
}
